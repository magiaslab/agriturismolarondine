import i18next, { t } from "i18next";
import flatpickr from "flatpickr";
import "flatpickr/dist/flatpickr.min.css";
import { onMount } from "solid-js";

const lang = i18next.language;
const base = lang === 'it' ? '' : `/${lang}`;

onMount(() => {
  const arrivoElement = document.querySelector("#datepicker-arrivo");
  if (arrivoElement) {
      flatpickr(arrivoElement, {
      dateFormat: "d-m-Y",
      minDate: "today",
      locale: i18next.language,
    });
  }

  const partenzaElement = document.querySelector("#datepicker-partenza");
  console.log("Elemento trovato:", partenzaElement);
  if (partenzaElement) {
    flatpickr(partenzaElement, {
      dateFormat: "d-m-Y",
      minDate: "today",
    });
    console.log("Flatpickr inizializzato");
  } else {
    console.log("Elemento non trovato");
  }
});
