---
import { getImage } from "astro:assets";
import Image from "astro/components/Image.astro";
import i18next, { t } from "i18next";
import myBackground from "../assets/img/sfondohome.png"
const optimizedBackground = await getImage({src: myBackground, format: 'webp'});
const lang = i18next.language;
const base = lang === 'it' ? '' : `/${lang}`;
import img1 from "../assets/img/image00001.jpeg"
---

<section class="bg-secondary dark:bg-gray-900" style={`background-image: url(${optimizedBackground.src});`}>
    <div class="grid max-w-screen-xl px-4 py-8 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12">
        <div class="mr-auto place-self-center lg:col-span-7">
            <h1 class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl text-primary">{t("content1_home.title")}</h1>
            <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">{t("content1_home.text1")}</p>
            <p class="max-w-2xl mb-6 font-light text-gray-500 lg:mb-8 md:text-lg lg:text-xl dark:text-gray-400">{t("content1_home.text2")}</p>

        </div>
        <div class=" lg:mt-0 lg:col-span-5 lg:flex">
            <Image src={img1} alt="mockup" class="rounded-lg">
        </div>                
    </div>
</section>

