---
import { changeLanguage } from "i18next";
import MainLayout from "../layouts/Main.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Slider from "../components/sliderHomeIt.jsx";
import HeroHome from "../components/HeroHome.astro";
import BookingBanner from "../components/BookingBanner.astro";
import Content1Home from "../components/Content1_Home.astro";
import Content2Home from "../components/Content2_Home.astro";
import AppartamentiHome from "../components/Appartamenti_home.astro";
import CasolareHome from "../components/CasolareHome.astro";
import Video from "../components/Video.astro";
import TerritorioHome from "../components/Territorio_home.astro";

changeLanguage("it");
---





<MainLayout title="Agriturismo La Rondine Bolgheri">
<Header/>
<Slider client:load />
<BookingBanner/>
<div class="adv-gallery-v6 w-full overflow-hidden pt-8 lg:pt-12 pb-20 lg:pb-32 2xl:flex 2xl:justify-center">
    <div class="adv-gallery-v6__inner w-[240%] ml-[-70%] transition-opacity duration-300 md:w-[160%] md:ml-[-30%] 2xl:w-[2304px] 2xl:shrink-0 2xl:mx-auto 2xl:my-0">
      <ul class="grid grid-cols-12 gap-5 lg:gap-8">
        <li class="col-span-12 relative z-[2]">
          <ul class="grid grid-cols-12 gap-5 lg:gap-8">
            <li class="col-span-4 reveal-fx reveal-fx--translate-up md:col-span-3" data-reveal-fx-delay="200">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-md">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-1.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
  
            <li class="col-span-4 reveal-fx reveal-fx--translate-up md:col-span-3" data-reveal-fx-delay="100">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-lg">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-2.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
  
            <li class="col-span-4 reveal-fx reveal-fx--translate-up md:col-span-3">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-xl">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-3.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
  
            <li class="reveal-fx reveal-fx--translate-up md:col-span-3 hidden md:block" data-reveal-fx-delay="300">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-sm">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-4.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
          </ul>
        </li>
  
        <li class="col-span-12 relative z-[1]">
          <ul class="grid grid-cols-[repeat(24,_minmax(0,_1fr))] gap-5 lg:gap-8 justify-center">
            <li class="col-span-8 col-start-5 reveal-fx reveal-fx--translate-up md:col-start-4 md:col-span-6" data-reveal-fx-delay="300">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-sm">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-5.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
  
            <li class="col-span-8 reveal-fx reveal-fx--translate-up md:col-span-6" data-reveal-fx-delay="100">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-xl">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-6.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
  
            <li class="reveal-fx reveal-fx--translate-up md:col-span-6 hidden md:block" data-reveal-fx-delay="200">
              <a href="#0" class="adv-gallery-v6__card relative bg-white block rounded-md overflow-hidden grayscale-[90%] aspect-w-16 aspect-h-9 transition-all duration-300 hover:grayscale-0 hover:-translate-y-2 active:translate-y-2 shadow-md">
                <img class="adv-gallery-v6__img block w-full h-full object-cover" src="../assets/img/adv-gallery-v6-img-7.jpg" alt="Image description" loading="lazy">
              </a>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
<Footer/>
</MainLayout>


