---
import { changeLanguage } from "i18next";
import MainLayout from "../layouts/Main.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import HeroHome from "../components/HeroHome.astro";
import BookingBanner from "../components/BookingBanner.astro";
import Content1Home from "../components/Content1_Home.astro";
import Content2Home from "../components/Content2_Home.astro";
import AppartamentiHome from "../components/Appartamenti_home.astro";
import CasolareHome from "../components/CasolareHome.astro";
import Video from "../components/Video.astro";
import TerritorioHome from "../components/Territorio_home.astro";
import Cta from "../components/Cta.astro";
import AgriturismoSchema from "../components/AgriturismoSchema.astro";

changeLanguage("it");

// SEO ottimizzato per la homepage
const seoTitle = "Agriturismo La Rondine - Vacanze in Toscana tra Vigneti e Mare | Bolgheri";
const seoDescription = "Scopri l'Agriturismo La Rondine a Bolgheri: appartamenti confortevoli immersi nei vigneti toscani, a soli 6 km dal mare. Vacanze perfette in famiglia con degustazioni di vini DOC.";
const canonicalUrl = "https://agriturismolarondine.it/";
---





<MainLayout 
  title={seoTitle}
  description={seoDescription}
  canonical={canonicalUrl}
>
  <AgriturismoSchema />
  <Header/>
  <HeroHome/>
  <BookingBanner/>
  <Content1Home/>
  <Content2Home/>
  <AppartamentiHome/>
  <Cta/>
  <Video/>
  <CasolareHome/>
  <TerritorioHome/>
  <Footer/>
</MainLayout>

